<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="calculatorButton">
        <item name="android:textSize">@dimen/textButton</item>
    </style>
    <style name="calculatorButton.Number">
        <item name="background">@drawable/circle_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="calculatorButton.operation">
        <item name="background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="calculatorButton.result">
        <item name="background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>